<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@drawable/map_introduction_selector"
                android:id="@+id/rl_storage"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:text="@string/str_init_storageName"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tvStorage"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_right_arrow"
                    android:src="@mipmap/right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/tvStorage"
                    android:layout_toLeftOf="@+id/iv_right_arrow"
                    android:id="@+id/tv_storageName"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/str_please_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/map_introduction_selector"
                android:id="@+id/rl_section_map"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:textColor="@android:color/black"
                    android:text="@string/str_init_sectionMapName"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:id="@+id/tvSectionMap"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_right_arrow1"
                    android:src="@mipmap/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@+id/iv_right_arrow1"
                    android:layout_toRightOf="@+id/tvSectionMap"
                    android:id="@+id/tv_mapName"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/str_please_select"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <Button
                android:background="@drawable/button_selector_rect"
                android:id="@+id/btn_storage_init"
                android:layout_gravity="center_horizontal"
                android:text="@string/confirm"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
